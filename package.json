{
  "name": "ticktock",
  "version": "1.0.0",
  "description": "A small, customizable Vanilla JavaScript countdown with zero dependencies.",
  "main": "/dist/ticktock.js",
  "module": "/dist/esm/ticktock.js",
  "directories": {
    "test": "./spec",
    "lib": "./src/lib"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "jest --verbose --coverage --coverageDirectory=./coverage ./spec",
    "test:watch": "jest --watch --verbose ./spec",
    "build": "tsc -c tsconfig.json && tsc -p tsconfig.esm.json",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bjf5201/ticktock.git"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "jest-cli": "29.7.0",
    "typescript": "5.6.2"
  },
  "packageManager": "npm@6.14.13"
}
